<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakeDocumentActivity">

    <RelativeLayout
        android:elevation="18dp"
        android:background="@color/secondary_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:onClick="goToMainActivity"
            android:layout_alignParentLeft="true"
            android:padding="16dp"
            android:textColor="@color/primary_color"
            android:textSize="16sp"
            android:text="@string/cancel"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:onClick="saveDocument"
            android:id="@+id/ok_save_button"
            android:layout_alignParentRight="true"
            android:padding="16dp"
            android:textColor="@color/primary_color"
            android:textSize="16sp"
            android:text="@string/ok"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <ScrollView
        android:background="@color/main_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/main_background"
            android:layout_marginTop="64dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingBottom="128dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:background="@drawable/inserted_text_background"
                android:layout_marginTop="16dp"
                android:id="@+id/document_id"
                android:textSize="32sp"
                android:hint="@string/title_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="64dp"
                android:textColor="@color/text_primary_color"
                android:textSize="24sp"
                android:text="@string/h1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/text_primary_color"
                android:textSize="18sp"
                android:text="@string/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:background="@drawable/inserted_text_background"
                android:id="@+id/h1_text"
                android:layout_marginTop="16dp"
                android:hint="@string/insert_text_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
